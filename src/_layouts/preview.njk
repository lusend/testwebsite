{% set css %}
{% include "styles/main.css" %}
{% endset %}

{% set js %}
{% include "scripts/env.js" %}
{% include "scripts/commit.js" %}
{% include "scripts/preview.js" %}
{% endset %}

{% set myPages = collections.pages | eleventyNavigation %}

{% macro renderPage(entry, isChild = false, childMargin = 0) %}

  <div class="mb-2">
    <div class="flex flex-wrap items-stretch leading-tight">
      <div style="font-size: calc(1.25rem - {{childMargin * 2}}px)" class="px-2 py-2 relative font-semibold rounded-lg rounded-b-none sm:rounded-b-lg sm:rounded-r-none basis-full sm:basis-0 sm:flex-auto flex justify-start items-center gap-2 bg-base-300">
        <div style="margin-left: {{(childMargin) * 30}}px">
          <div class="absolute h-full rounded-tl-lg sm:rounded-l-lg top-0 left-0 bg-primary-content-fade" style="width: {{(childMargin) * 30}}px;">&nbsp;</div>
          <span>{{ entry.title }}</span>
        </div>
      </div>
      <button id="{{ entry.key + "_preview" }}" class="flex items-center justify-center gap-2 px-5 py-2 font-semibold rounded-lg rounded-t-none rounded-r-none sm:rounded-r-none sm:rounded-l-none text-primary-content bg-primary hover:bg-primary-focus">
        <ion-icon name="open-outline">&nbsp;</ion-icon>
        <span>Preview</span>
      </button>
      <button id="{{ entry.key + "_copy" }}" class="flex items-center justify-center flex-auto gap-2 px-5 py-2 font-semibold rounded-lg rounded-t-none rounded-l-none sm:rounded-tr-lg sm:flex-initial text-secondary-content bg-secondary hover:bg-secondary-focus">
        <ion-icon name="clipboard-outline">&nbsp;</ion-icon>
        <span id="{{ entry.key + "_copytext" }}">Copy</span>
      </button>
    </div>

    <script>
      window.addEventListener('load', function () {
        preview('{{ entry.key }}', '{{ entry.permalink | url }}', '{{ (entry.path + "_stage.html") | url }}');
      })
    </script>
  </div>

  {% if entry.children | length %}
    <div class="py-2">
      {% for item in entry.children %}
        {{ renderPage(item, true, childMargin + 1) }}
      {% endfor %}
    </div>
  {% endif %}
{% endmacro %}

<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LU Send Website</title>
    <style>
      {{css | postcss | safe}}
    </style>
  </head>

  <body>
    <div id="app">
      <div class="prose prose-a:font-[initial] m-auto p-5">
        {{ content | safe }}

        <label x-data for="envToggle" class="flex items-center w-full my-5 cursor-pointer not-prose">
          <strong class="flex-auto" x-text="$store.env.label">&nbsp;</strong>
          <div class="relative">
            <input x-on:input="$store.env.toggle()" type="checkbox" checked="checked" autocomplete="off" id="envToggle" class="sr-only peer"/>
            <div class="absolute z-10 w-6 h-6 transition bg-white rounded-full left-1 top-1 peer-checked:translate-x-full bg-primary peer-checked:bg-secondary"></div>
            <div class="z-0 h-8 rounded-full bg-base-300 w-14"></div>
          </div>
        </label>

        {% for item in myPages %}
          {{ renderPage(item) }}
        {% endfor %}
      </div>
    </div>

    <script src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script defer src="https://unpkg.com/@alpinejs/intersect@3.x.x/dist/cdn.min.js"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <script>
      {{ js | safe }}
      checkIfDeployed();
    </script>
  </body>
</html>
