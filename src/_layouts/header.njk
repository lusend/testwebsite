{% if header %}
  <div class="relative z-20 flex flex-row justify-center w-full px-8 pt-12 pb-5 mx-auto text-base bg-primary text-primary-content">
    <div class="max-w-[calc(65ch+16.25rem)] flex-1 flex flex-col gap-1 items-center navSmall:items-start">
      {% include "./breadcrumbs.njk" %}
      <div class="prose">
        <h1 class="text-center navSmall:text-left text-primary-content">{{ title }}</h1>
      </div>
      {% if author !== false %}
        <div class="text-sm text-base-300 text-center navSmall:text-left mt-3 navSmall:mt-0">
          {% if author | length %}
            <div>
              <span>Written By </span>
              <strong>{{ author }}</strong>
            </div>
          {% endif %}
          <div>
            <span>Last Updated</span>
            <strong>{{ page.date | postDate }}</strong>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  <svg id="header-wave" class="relative z-20 -mt-1" viewBox="0 0 1200 80" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M 1200,0 H 0 V 37 C 67,26 133,15 200,10 C 266,4 333,5 400,23 C 466,41 533,76 600,79 C 677,78 738,53 800,48 C 866,44 933,63 1000,62 C 1065,62 1131,41 1200,19 V 0 Z" fill="#0A254E"/>
  </svg>
{% endif %}
