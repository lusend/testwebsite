{% set css %}
{% include "styles/main.css" %}
{% endset %}

{% set js %}
{% include "scripts/env.js" %}
{% include "scripts/commit.js" %}
{% include "scripts/preview.js" %}
{% endset %}

<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LU Send Website</title>
    <style>
      {{css | postcss | safe}}
    </style>
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <div id="app">
      <div class="prose prose-a:font-[initial] m-auto">
        {{ content | safe }}

        <label for="envToggle" class="flex items-center w-full my-5 cursor-pointer not-prose">
          <strong id="envToggleLabel" class="flex-auto">
            Preview & Copy Production Content
          </strong>
          <div class="relative">
            <input type="checkbox" checked="checked" autocomplete="off" onchange="toggleEnv()"  id="envToggle" class="sr-only peer"/>
            <div class="absolute z-10 w-6 h-6 transition bg-white rounded-full left-1 top-1 peer-checked:translate-x-full bg-primary peer-checked:bg-secondary"></div>
            <div class="z-0 h-8 rounded-full bg-base-300 w-14"></div>
          </div>
        </label>

        {% for item in collections.pages %}
          <div class="mb-2">
            <div class="flex flex-wrap items-stretch">
              <div class="px-5 py-2 font-bold uppercase rounded-lg rounded-b-none lg:rounded-b-lg lg:rounded-r-none basis-full lg:basis-0 lg:flex-auto flex- bg-base-300">{{ item.data.title }}</div>
              <button id="{{ item.data.slug + "_preview" }}" class="flex items-center justify-center gap-2 px-5 py-2 font-semibold rounded-lg rounded-t-none rounded-r-none lg:rounded-r-none lg:rounded-l-none text-primary-content bg-primary hover:bg-primary-focus">
                <ion-icon name="open-outline">&nbsp;</ion-icon>
                <span>Preview</span>
              </button>
              <button id="{{ item.data.slug + "_copy" }}" class="flex items-center justify-center flex-auto gap-2 px-5 py-2 font-semibold rounded-lg rounded-t-none rounded-l-none lg:rounded-tr-lg lg:flex-initial text-secondary-content bg-secondary hover:bg-secondary-focus">
                <ion-icon name="clipboard-outline">&nbsp;</ion-icon>
                <span id="{{ item.data.slug + "_copytext" }}">Copy</span>
              </button>
            </div>

            <script>
              $(document).ready(function () {
                preview('{{ item.data.slug }}', '{{ item.data.permalink | url }}', '{{ (item.data.path + "_stage.html") | url }}');
              })
            </script>
          </div>
        {% endfor %}
      </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <script>
      {{ js | safe }}
      checkIfDeployed();
    </script>
  </body>
</html>
